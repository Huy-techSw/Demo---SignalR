@page
@model FA24_PRN221_3W_G3_KoiCareSystemAtHome.RazorWebApp.Pages.Ponds.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Pond</h1>

<h4>Pond</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pond.PondName" class="control-label"></label>
                <input asp-for="Pond.PondName" class="form-control" />
                <span asp-validation-for="Pond.PondName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pond.UserId" class="control-label"></label>
                <input asp-for="Pond.UserId" class="form-control" />
                <span asp-validation-for="Pond.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pond.Size" class="control-label"></label>
                <input asp-for="Pond.Size" class="form-control" />
                <span asp-validation-for="Pond.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pond.Depth" class="control-label"></label>
                <input asp-for="Pond.Depth" class="form-control" />
                <span asp-validation-for="Pond.Depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pond.Shape" class="control-label"></label>
                <input asp-for="Pond.Shape" class="form-control" />
                <span asp-validation-for="Pond.Shape" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pond.Volume" class="control-label"></label>
                <input asp-for="Pond.Volume" class="form-control" />
                <span asp-validation-for="Pond.Volume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pond.DrainCount" class="control-label"></label>
                <input asp-for="Pond.DrainCount" class="form-control" />
                <span asp-validation-for="Pond.DrainCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pond.PumpCapacity" class="control-label"></label>
                <input asp-for="Pond.PumpCapacity" class="form-control" />
                <span asp-validation-for="Pond.PumpCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pond.SkimmerCount" class="control-label"></label>
                <input asp-for="Pond.SkimmerCount" class="form-control" />
                <span asp-validation-for="Pond.SkimmerCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index"><button type="button" class="btn btn-primary">Back to List</button></a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/signalr/5.0.0/signalr.min.js"></script>
    <script>
        // SignalR setup
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/hub")  // Replace with your Hub URL
            .build();

        // Listen to 'LoadPond' event from SignalR
        connection.on("LoadPond", function (pond) {
            alert("New Pond Created: " + pond.PondName);
            // Optionally, you can update UI elements with the new pond info
            console.log("New Pond created: ", pond);
        });

        // Start the connection
        connection.start().catch(function (err) {
            return console.error(err.toString());
        });
    </script>
}
